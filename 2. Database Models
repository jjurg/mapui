# models/geo_data.py
from flask_sqlalchemy import SQLAlchemy

db = SQLAlchemy()

class ShapeData(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    layer_type = db.Column(db.String(50))  # costing/pricing polygons
    geometry = db.Column(db.JSON)  # GeoJSON format
    installation_cost = db.Column(db.Float)
    recurring_cost = db.Column(db.Float)
    supplier = db.Column(db.String(100))
    max_speed = db.Column(db.Integer)

class LocationData(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    collection_id = db.Column(db.String(100))
    latitude = db.Column(db.Float)
    longitude = db.Column(db.Float)
    price_quote = db.Column(db.Float)
    price_level = db.Column(db.String(50))
    site_type = db.Column(db.String(50))
    site_speed = db.Column(db.Integer)
    service_offered = db.Column(db.String(100))
    geocode_match_level = db.Column(db.String(50))
    marker_config = db.Column(db.JSON)  # Store marker formatting
