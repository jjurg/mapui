// static/js/map.js
class MapViewer {
    constructor() {
        this.map = new maplibregl.Map({
            container: 'map',
            style: 'https://demotiles.maplibre.org/style.json',
            center: [0, 0],
            zoom: 2
        });
        
        this.setupControls();
        this.setupEventListeners();
    }

    setupControls() {
        // Add map controls
    }

    setupEventListeners() {
        // Setup event handlers
    }

    loadShapeData(country) {
        fetch(`/api/shapes/${country}`)
            .then(response => response.json())
            .then(data => {
                // Add shape data to map
            });
    }

    loadLocationData(collectionId) {
        fetch(`/api/locations/${collectionId}`)
            .then(response => response.json())
            .then(data => {
                // Add location markers to map
            });
    }
}

const viewer = new MapViewer();
